# Configuration Frontend ChopExpress
# Copier ce fichier vers .env.local et remplir avec vos vraies valeurs

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================

# Environnement de déploiement
VITE_APP_ENV=development

# Version de l'application
VITE_APP_VERSION=1.0.0

# Nom de l'application
VITE_APP_NAME=ChopExpress

# =============================================================================
# API BACKEND
# =============================================================================

# URL de l'API backend
VITE_API_BASE_URL=http://localhost:8000

# URL de l'API en production
VITE_API_PROD_URL=https://api.chopexpress.com

# Timeout des requêtes API (en millisecondes)
VITE_API_TIMEOUT=30000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# URL du projet Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co

# Clé publique Supabase (anon key)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# AUTHENTIFICATION
# =============================================================================

# Durée de validité du token JWT (en secondes)
VITE_JWT_EXPIRY=3600

# Nom du cookie de session
VITE_SESSION_COOKIE_NAME=chopexpress_session

# =============================================================================
# MAPBOX (GÉOLOCALISATION)
# =============================================================================

# Token d'accès Mapbox pour les cartes
VITE_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# Style de carte par défaut
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/streets-v11

# Coordonnées par défaut (Douala, Cameroun)
VITE_DEFAULT_LAT=4.0511
VITE_DEFAULT_LNG=9.7679

# Zoom par défaut
VITE_DEFAULT_ZOOM=12

# =============================================================================
# INTERNATIONALISATION
# =============================================================================

# Langue par défaut
VITE_DEFAULT_LANGUAGE=fr

# Langues supportées (séparées par des virgules)
VITE_SUPPORTED_LANGUAGES=fr,en

# Devise par défaut
VITE_DEFAULT_CURRENCY=XAF

# Symbole de devise
VITE_CURRENCY_SYMBOL=FCFA

# =============================================================================
# WHATSAPP INTEGRATION
# =============================================================================

# Numéro WhatsApp Business
VITE_WHATSAPP_NUMBER=237XXXXXXXXX

# Lien WhatsApp pour le support
VITE_WHATSAPP_SUPPORT_URL=https://wa.me/237XXXXXXXXX

# Message par défaut pour WhatsApp
VITE_WHATSAPP_DEFAULT_MESSAGE=Bonjour, je souhaite commander via ChopExpress

# =============================================================================
# PAIEMENT (CINETPAY)
# =============================================================================

# Clé publique CinetPay
VITE_CINETPAY_PUBLIC_KEY=your_cinetpay_public_key_here

# URL de retour après paiement
VITE_PAYMENT_RETURN_URL=http://localhost:3000/payment/success

# URL d'annulation de paiement
VITE_PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# =============================================================================
# ANALYTICS ET MONITORING
# =============================================================================

# Google Analytics ID
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN pour le monitoring des erreurs
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Hotjar ID pour l'analyse UX
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# RÉSEAUX SOCIAUX
# =============================================================================

# URL Facebook
VITE_FACEBOOK_URL=https://facebook.com/ChopExpress

# URL Twitter
VITE_TWITTER_URL=https://twitter.com/ChopExpress

# URL Instagram
VITE_INSTAGRAM_URL=https://instagram.com/ChopExpress

# =============================================================================
# CONFIGURATION DE DÉVELOPPEMENT
# =============================================================================

# Activer les outils de développement
VITE_DEV_TOOLS=true

# Activer les logs détaillés
VITE_DEBUG_MODE=true

# Activer React Query DevTools
VITE_REACT_QUERY_DEVTOOLS=true

# Port de développement
VITE_DEV_PORT=3000

# Host de développement
VITE_DEV_HOST=localhost

# =============================================================================
# CONFIGURATION DE PRODUCTION
# =============================================================================

# URL de production
VITE_PROD_URL=https://chopexpress.com

# CDN pour les assets statiques
VITE_CDN_URL=https://cdn.chopexpress.com

# =============================================================================
# SÉCURITÉ
# =============================================================================

# Clé de chiffrement pour les données sensibles (côté client)
VITE_ENCRYPTION_KEY=your_encryption_key_here

# Domaines autorisés pour CORS
VITE_ALLOWED_ORIGINS=http://localhost:3000,https://chopexpress.com

# =============================================================================
# FONCTIONNALITÉS
# =============================================================================

# Activer la géolocalisation
VITE_ENABLE_GEOLOCATION=true

# Activer les notifications push
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Activer le mode hors ligne
VITE_ENABLE_OFFLINE_MODE=true

# Activer le mode sombre
VITE_ENABLE_DARK_MODE=false

# Activer les animations
VITE_ENABLE_ANIMATIONS=true

# =============================================================================
# LIMITES ET QUOTAS
# =============================================================================

# Taille maximale de fichier upload (en MB)
VITE_MAX_FILE_SIZE=5

# Nombre maximum d'articles dans le panier
VITE_MAX_CART_ITEMS=50

# Délai d'expiration du panier (en minutes)
VITE_CART_EXPIRY=30

# =============================================================================
# CONTACT ET SUPPORT
# =============================================================================

# Email de support
VITE_SUPPORT_EMAIL=support@chopexpress.com

# Téléphone de support
VITE_SUPPORT_PHONE=+237XXXXXXXXX

# Heures d'ouverture du support
VITE_SUPPORT_HOURS=Lun-Dim 8h-22h

# =============================================================================
# CONFIGURATION AVANCÉE
# =============================================================================

# Intervalle de rafraîchissement des données (en secondes)
VITE_REFRESH_INTERVAL=300

# Nombre de tentatives de reconnexion
VITE_RETRY_ATTEMPTS=3

# Délai entre les tentatives (en millisecondes)
VITE_RETRY_DELAY=1000

# Activer la compression des images
VITE_ENABLE_IMAGE_COMPRESSION=true

# Qualité de compression des images (0-100)
VITE_IMAGE_QUALITY=80

# =============================================================================
# VARIABLES SPÉCIFIQUES AU CAMEROUN
# =============================================================================

# Fuseau horaire
VITE_TIMEZONE=Africa/Douala

# Format de date par défaut
VITE_DATE_FORMAT=DD/MM/YYYY

# Format d'heure par défaut
VITE_TIME_FORMAT=HH:mm

# Préfixe téléphonique du pays
VITE_COUNTRY_CODE=+237

# Code pays ISO
VITE_COUNTRY_ISO=CM

# Villes principales (séparées par des virgules)
VITE_MAIN_CITIES=Douala,Yaoundé,Bafoussam,Bamenda,Garoua

# =============================================================================
# NOTES IMPORTANTES
# =============================================================================

# 1. Ne jamais commiter le fichier .env.local dans Git
# 2. Les variables VITE_ sont exposées côté client, ne pas y mettre de secrets
# 3. Pour les secrets, utiliser les variables d'environnement serveur
# 4. Redémarrer le serveur de développement après modification
# 5. Vérifier que toutes les variables sont définies avant le déploiement